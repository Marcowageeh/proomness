# BEGIN Pro Omnes SEO
<IfModule mod_rewrite.c>
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Canonicalize to non-www
RewriteCond %{HTTP_HOST} ^www\.proomnes\.company$ [NC]
RewriteRule ^ https://proomnes.company%{REQUEST_URI} [L,R=301]

# Normalize accidental trailing slash after .php (e.g., page.php/ -> page.php)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} \.php/$
RewriteRule ^(.+)\.php/$ /$1.php [L,R=301]
</IfModule>

<IfModule mod_headers.c>
  Header set X-Robots-Tag "index, follow"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>


# Gzip compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/json application/javascript application/xml application/rss+xml application/ld+json image/svg+xml
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType image/png "access plus 60 days"
  ExpiresByType image/jpeg "access plus 60 days"
  ExpiresByType image/svg+xml "access plus 60 days"
  ExpiresByType image/webp "access plus 60 days"
  ExpiresDefault "access plus 7 days"
</IfModule>

# Custom error pages
ErrorDocument 404 /404.php
# END Pro Omnes SEO
